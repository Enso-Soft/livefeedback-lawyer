<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="입력 된 전화번호로 인증 번호를 전송 했어요"
        tools:text="010-1234-9739로 인증 번호를 전송 했어요"/>

    <com.lafi.lawyer.core.design_system.component.text_input.TextInputLayout
        android:id="@+id/ti_verify_code"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="12dp"
        app:labelText="인증 번호"/>

    <TextView
        android:id="@+id/tv_continue"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="가입하기"
        android:background="@drawable/bg_solid_lafi_primary_radius_12_ripple_gray_30" />

</LinearLayout>