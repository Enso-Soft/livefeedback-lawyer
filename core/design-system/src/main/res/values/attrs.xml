<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <declare-styleable name="TextInputLayout">
        <attr name = "labelText" format="string|reference"/>
        <attr name = "duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TopBarLayout">
        <attr name = "title" format="string|reference"/>
        <attr name = "isBackVisible" format="boolean"/>
        <attr name = "isCloseVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="KeyboardSyncLayout">
        <!-- 마진 속성 (dp 단위) -->
        <attr name="startMargin" format="dimension" />
        <attr name="endMargin" format="dimension" />
        <attr name="topMargin" format="dimension" />
        <attr name="bottomMargin" format="dimension" />
        <attr name="margin" format="dimension" /> <!-- 모든 방향에 적용되는 마진 -->

        <!-- 코너 반경 (dp 단위) -->
        <attr name="radius" format="dimension" />

        <!-- 동기화 타입 -->
        <attr name="syncType" format="enum">
            <enum name="keyboardUp" value="0" />
            <enum name="keyboardDown" value="1" />
        </attr>
    </declare-styleable>
</resources>